<Window x:Class="Tehtava7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava7"
        mc:Ignorable="d"
        Title="MainWindow" Height="244.278" Width="312.757">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="tbPassword" Margin="10, 0, 10, 0" Text="Enter password:" />
            <TextBox x:Name="txtPassword" TextChanged="txtPassword_TextChanged" Margin="10, 0, 10, 10"/>
            <TextBlock x:Name="tbCharacters" Margin="10, 0, 10, 5" Text="Characters: " />
            <TextBlock x:Name="tbUppercase" Margin="10, 0, 10, 5" Text="Uppercase: "/>
            <TextBlock x:Name="tbLowercase" Margin="10, 0, 10, 5" Text="Lowercase: "/>
            <TextBlock x:Name="tbNumbers" Margin="10, 0, 10, 5" Text="Numbers: "/>
            <TextBlock x:Name="tbSpecials" Margin="10, 0, 10, 5" Text="Specials: " />
            <StackPanel x:Name="background" Background="#FF8F8F8F" Height="60">
                <TextBlock x:Name="tbNotice" FontSize="40" Margin="10, 0, 10, 0" Text="Enter password"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
